<div class="top-wrapper">
  <div class="top-content">
    <h2 class="intro-title">YouVoteへようこそ</h2>
    <p class="intro-comment">自由に議題を決め、投票を行い、チームの意思決定に役立ててください。</p>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLogin">
      ログイン
    </button>
    <button type="button" class="btn btn-success ml-4" data-toggle="modal" data-target="#exampleModalSignup">
      新規登録
    </button>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ログイン</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= render partial: "users/form", locals: { user: @user } %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalSignup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= render partial: "users/form", locals: { user: @user } %>
    </div>
  </div>
</div>
