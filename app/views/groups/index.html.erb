<div class="current-user-wrapper">
  <% if @groups.present? %>
    <% @groups.each do |group| %>
      <h1><%= link_to "#{group.name}", group %></h1>
      <% group.users.each do |user| %>
        <p><%= user.name %></p>
      <% end %>
    <% end %>  
  <% end %>
  <%= link_to "新規作成", :new_group, class: "btn btn-outline-success" %>
  <% if Rails.env.development? %>
    開発環境のテキスト
  <% elsif Rails.env.test? %>
   テスト環境のテキスト
  <% elsif Rails.env.production? %>
    本番環境のテキスト
  <% end %>
</div>
  
